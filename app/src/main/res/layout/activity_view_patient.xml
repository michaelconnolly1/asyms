<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/hLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/my_name_label"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:text = "Name: "
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingBottom="10dip"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/my_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:text="Joe Bloggs"
                android:textSize="15dp"
                android:paddingBottom="10dip"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/my_dob_label"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:text = "DOB: "
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingBottom="10dip"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/my_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:text="19/05/1992"
                android:textSize="15dp"
                android:paddingBottom="10dip"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/my_gender_label"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:text = "Gender: "
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingBottom="10dip"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/my_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:text="Male"
                android:textSize="15dp"
                android:paddingBottom="10dip"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/my_phone_label"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:text = "Phone: "
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingBottom="10dip"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/my_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:text="10415673436"
                android:textSize="15dp"
                android:paddingBottom="10dip"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/my_chi_label"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:text = "CHI No: "
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingBottom="10dip"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/my_chi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:text="0111111111"
                android:textSize="15dp"
                android:paddingBottom="10dip"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/my_email_label"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:text = "email:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:paddingBottom="10dip"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/my_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:text="bob@bob.com"
                android:textSize="15dp"
                android:paddingBottom="10dip"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">

            <Button
                android:id="@+id/questionnairesbutton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:onClick="viewQuestionnaires"
                android:text="Questionnaires"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16dip" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/messagesbutton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:onClick="viewMessages"
                android:text="Messages"
                android:textColor="@color/white"
                android:textSize="16dip" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
